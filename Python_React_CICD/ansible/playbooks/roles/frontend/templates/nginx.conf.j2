user nginx;
worker_processes auto;
pid /run/nginx.pid;

events {
    worker_connections 768;
}

http {
    server {
        listen {{ frontend_port }};
        server_name {{ frontend_name }};

        root {{ frontend_app_directory }};
        index index.html;

        location / {
            try_files $uri $uri/ /index.html;
        }
    }
}
